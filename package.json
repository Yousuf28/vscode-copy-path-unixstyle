{
	"publisher": "yousuf28",
	"name": "copy-path-unixstyle",
	"displayName": "Copy Path (Unix Style)",
	"description": "Copy Windows paths to clipboard in Unix/Linux/POSIX style",
	"version": "1.0.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Yousuf28/vscode-copy-path-unixstyle"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:copy-path-unixstyle.copyPath",
		"onCommand:copy-path-unixstyle.copyRelativePath"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "copy-path-unixstyle.copyPath",
				"title": "Copy Path (Unix Style)"
			},
			{
				"command": "copy-path-unixstyle.copyRelativePath",
				"title": "Copy Relative Path (Unix Style)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "copy-path-unixstyle.copyPath",
					"group": "6_copypath",
					"when": "isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyRelativePath",
					"group": "6_copypath",
					"when": "isFileSystemResource"
				}
			],
			"editor/title/context": [
				{
					"command": "copy-path-unixstyle.copyPath",
					"group": "1_cutcopypaste",
					"when": "isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyRelativePath",
					"group": "1_cutcopypaste",
					"when": "isFileSystemResource"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.47",
		"@types/vscode": "^1.30.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.4.0",
		"typescript": "^4.6.3",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"path": "^0.12.7"
	}
}
